<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Index</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
</head>

<body>
  <main class="w-full min-h-screen bg-zinc-100 font-['helvetica']">
    <!-- Navbar -->
    <nav class="flex px-10 justify-between py-5 bg-white shadow-md">
      <h3 class="text-2xl font-semibold tracking-tight">Khatabook</h3>
      <div class="navlinks flex gap-5 items-center">
        <a href="/" class="tracking-tight text-gray-700 hover:text-blue-500">Home</a>
        <a href="/create" class="tracking-tight text-gray-700 hover:text-blue-500">Create New Hisaab</a>
      </div>
    </nav>

    <!-- Main Section -->
    <div class="hisaabs px-10">
      <h3 class="capitalize text-2xl font-medium mb-5 mt-10 tracking-tight">All Hisaab Kitaab</h3>

      <% if(files.length > 0){ %>
        <div class="space-y-4">
          <% files.forEach((file) => { %>
            <div class="hisaab w-full max-w-3xl bg-blue-500 py-3 px-5 rounded-md flex items-center justify-between">
              <div class="flex items-center gap-4 text-white">
                <h3 class="text-xl font-medium truncate w-48"><%= file.replace(".txt", "") %></h3>
                <a href="/hisaab/<%= file %>">
                  <i class="ri-arrow-right-line bg-white text-blue-500 text-xl p-2 rounded-full"></i>
                </a>
              </div>
              <div class="flex items-center gap-3">
                <a href="/edit/<%= file %>">
                  <i class="ri-pencil-line text-white text-2xl hover:text-yellow-300"></i>
                </a>
                <a href="/delete/<%= file %>">
                  <i class="ri-delete-bin-line bg-white text-red-500 text-2xl p-2 rounded-full hover:bg-red-500 hover:text-white transition"></i>
                </a>
              </div>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <h3 class="text-zinc-500 mt-5">Nothing to show, Create hisaabs to see something.</h3>
      <% } %>

    </div>
  </main>
</body>
</html>
